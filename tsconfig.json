{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "noEmitOnError": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "sourceMap": false,
    "strict": true,
    "target": "es2020",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src", "vite.config.ts"]
}
