{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "noEmitOnError": true,
    "outDir": "dist/js",
    "paths": {
      "@/*": ["./src/*"]
    },
    "rootDir": "src",
    "sourceMap": false,
    "strict": true,
    "target": "ES2022",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["./src", "./vite.config.ts"]
}
